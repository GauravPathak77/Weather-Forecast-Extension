{
    "manifest_version": 2,
    "name": "Weather Forecast",
    "description": "A simple extension that displays the current weather and forecast for your location",
    "version": "1.0",
    "permissions": [
        "geolocation",
        "activeTab",
        "storage",
        "https://api.openweathermap.org/"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "128": "icon.png"
    }
}